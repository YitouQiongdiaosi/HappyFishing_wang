<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_passwordalter_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PasswordAlterActivity" >

    <com.example.happyfishing.view.ActionBarView
        android:id="@+id/actionBar_passwordalter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_passwordalter_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_passwordalter_yuanmima"
            android:layout_width="@dimen/tv_passwordalter_item_width"
            android:layout_height="match_parent"
            android:text="原密码" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/edt_passwordalter_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_passwordalter_old"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:textSize="@dimen/tv_register_edit_size" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/tv_passwordalter_item_width"
            android:layout_height="match_parent"
            android:text="新密码" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/edt_passwordalter_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_passwordalter_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textSize="@dimen/tv_register_edit_size" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/tv_passwordalter_item_width"
            android:layout_height="match_parent"
            android:text="再次输入" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/edt_passwordalter_newconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_passwordalter_newconfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:textSize="@dimen/tv_register_edit_size" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_passwordalter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="确定" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
        <View android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView android:id="@+id/tv_passwordalter_forget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记密码？点击这里"
            android:textColor="@color/blue"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5" />

</LinearLayout>